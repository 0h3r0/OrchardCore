    <ProjectReference Include="..\..\OrchardCore\OrchardCore.ResourceManagement\OrchardCore.ResourceManagement.csproj" />
    <ProjectReference Include="..\..\OrchardCore\OrchardCore.Security.Abstractions\OrchardCore.Security.Abstractions.csproj" />
    <ProjectReference Include="..\..\OrchardCore\OrchardCore.Module.Targets\OrchardCore.Module.Targets.csproj" />
    <ProjectReference Include="..\..\OrchardCore\OrchardCore.Workflows.Abstractions\OrchardCore.Workflows.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="$(AspNetCoreVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Content\Scripts\" />
    <Folder Include="Content\Styles\Images\" />
    <Folder Include="Models\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Assets.json" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\Images\cog.png">
      <PackagePath>assets\$(PackageId)\</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Update="Assets\Images\menu.workflows.png">
      <PackagePath>assets\$(PackageId)\</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Update="Styles\workflows-activity.css">
      <PackagePath>assets\$(PackageId)\</PackagePath>
    </None>
  </ItemGroup>

</Project>