@using OrchardCore.Workflows.ViewModels;
@model ForLoopTaskViewModel

<fieldset class="form-group" asp-validation-class-for="CountExpression">
    <label asp-for="CountExpression">@T["Count Expression"] <span asp-validation-for="CountExpression"></span></label>
    <input type="expression" asp-for="CountExpression" syntax="Script" />
    <span class="hint">@T["The expression that evaluates to the number of times to loop."]</span>
</fieldset>