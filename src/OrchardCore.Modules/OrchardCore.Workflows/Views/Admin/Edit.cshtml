@model AdminEditViewModel
@using OrchardCore.Workflows.ViewModels;

<h1>@RenderTitleSegments(T["Edit Workflow {0}", Model.WorkflowDefinition.Name])</h1>
<div class="workflow-editor-container container-fluid">
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-10">
            <div class="workflow-editor-canvas">
                <div asp-validation-summary="ModelOnly"></div>
                <form asp-action="Edit" method="post">
                    <fieldset>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">@T["Save"]</button>
                            <a class="btn btn-secondary" asp-route-action="Index">@T["Cancel"]</a>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-2">
            @await DisplayAsync(New.ActivityToolbox(Model))
        </div>
    </div>
</div>
<style asp-src="~/OrchardCore.Workflows/Styles/workflows-workflow-editor.min.css" debug-src="~/OrchardCore.Workflows/Styles/workflows-workflow-editor.css"></style>
<script asp-name="jsplumb" depends-on="jQuery.ui" asp-src="/OrchardCore.Workflows/Scripts/jsplumb.min.js" type="text/javascript" version="2.4.3" at="Foot"></script>