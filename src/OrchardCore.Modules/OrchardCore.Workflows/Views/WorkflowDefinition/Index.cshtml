@model WorkflowDefinitionIndexViewModel
@using OrchardCore.Workflows.ViewModels;

<h1>@RenderTitleSegments(T["Manage Workflow Definitions"])</h1>


<nav class="admin-toolbar">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a asp-route-action="EditProperties" class="btn btn-primary" role="button">@T["Create new Workflow Definition"]</a>
        </li>
    </ul>
    <form asp-action="Index" method="get" class="form-inline">
        <input id="search-box" asp-for="Options.Search" class="form-control mr-sm-2" type="text" placeholder="@T["Search"]" autofocus="autofocus">
        <button type="submit" class="btn btn-secondary my-2 my-sm-0">@T["Search"]</button>
    </form>
</nav>

@if (Model.WorkflowDefinitions.Any())
{
    using (Html.BeginForm())
    {
        <ul class="list-group">
            @foreach (var entry in Model.WorkflowDefinitions)
            {
                <li class="list-group-item">
                    <div class="properties">
                        <div class="related">
                            <a asp-action="Edit" asp-route-id="@entry.Definition.Id" class="btn btn-primary btn-sm">@T["Edit"]</a>
                            <a asp-action="EditProperties" asp-route-id="@entry.Definition.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary btn-sm">@T["Properties"]</a>
                            <a asp-action="Delete" asp-route-id="@entry.Definition.Id" class="btn btn-danger btn-sm" itemprop="RemoveUrl UnsafeUrl">@T["Delete"]</a>
                        </div>

                        <a asp-action="Edit" asp-route-id="@entry.Definition.Id">@entry.Name</a>
                        @if (!entry.Definition.IsEnabled)
                        {
                            <span class="badge badge-warning">@T["disabled"]</span>
                        }
                    </div>

                    <div class="metadata">
                        <a asp-action="Index" asp-controller="WorkflowInstance" asp-route-workflowDefinitionId="@entry.Definition.Id" class="hint">@T["Running workflows: {0}", entry.WorkflowInstanceCount]</a>
                    </div>
                </li>
            }
        </ul>
    }

    @await DisplayAsync(Model.Pager)
}
else
{
    <div class="alert alert-info" role="alert">
        @T["<strong>Nothing here!</strong> There are no workflow definitions at the moment."]
    </div>
}