@model OrchardCore.Workflows.ViewModels.WorkflowDefinitionPropertiesViewModel

<h1>@RenderTitleSegments(T["Edit Workflow Definition Properties"])</h1>

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="EditProperties" method="post">
    <input type="hidden" asp-for="ReturnUrl" />

    <fieldset class="form-group" asp-validation-class-for="Name">
        <label asp-for="Name">@T["Workflow Name"]</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" autofocus />
    </fieldset>

    <fieldset class="form-group form-check">
        <label class="form-check-label" asp-for="IsEnabled">
            <input class="form-check-input" type="checkbox" asp-for="IsEnabled">
            @T["Enabled"]
        </label>
    </fieldset>

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
            <a class="btn btn-secondary" href="@Model.ReturnUrl">@T["Cancel"]</a>
        </div>
    </fieldset>
</form>
