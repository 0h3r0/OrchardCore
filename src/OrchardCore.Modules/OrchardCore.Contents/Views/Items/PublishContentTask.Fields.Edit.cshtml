@using OrchardCore.Contents.Workflows.ViewModels
@model PublishContentTaskViewModel

<fieldset class="form-group" asp-validation-class-for="Expression">
    <label asp-for="Expression">@T["Expression"] <span asp-validation-for="Expression"></span></label>
    <input type="expression" asp-for="Expression" syntax="Script" autofocus />
    <span class="hint">@T["Enter an expression that yields the content item to be published. For example: input(\"Content\"). If no expression is specified, the workflow's \"Content\" input will be used."]</span>
</fieldset>